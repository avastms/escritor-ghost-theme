<!DOCTYPE html>
<html>
<head>
    {{! Document Settings }}
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />

    {{! Page Meta }}
    <title>{{meta_title}} - {{@blog.title}}</title>
    <meta name="description" content="{{meta_description}}" />

    <meta name="HandheldFriendly" content="True" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <link rel="shortcut icon" href="{{asset "favicon.ico"}}">

    {{! Styles'n'Scripts }}
    <link rel="stylesheet" type="text/css" href="{{asset "css/main.css"}}" />

    {{! Ghost outputs important style and meta data with this tag }}
    {{ghost_head}}
</head>


{{#if post}}
<body class="{{body_class}} menu-toggle--posts">
{{else}}
<body class="{{body_class}}">
{{/if}}


    {{> browserupgrade}}


    {{#if @blog.navigation}}
        <a class="menu-toggle icon-menu" href="#">
            <div class="bars">
                <div class="bar"></div>
                <div class="bar"></div>
                <div class="bar"></div>
            </div>
            <span class="menu-word">Menu</span>
        </a>
    {{/if}}


    {{navigation}}

    <div class="site-wrapper">


        {{! Everything else gets inserted here }}
        {{{body}}}

    </div>


    {{!-- Footer --}}
    <footer class="site-footer clearfix">
        <section class="site-footer__block">
            <div class="madeby">Made by <a href="http://nomagick.naiver.org">Yanlong Wang</a></div>
            <div class="copyright">Forked from <a href="http://escritor.ozywuli.com">Escritor</a> &copy; {{date format="YYYY"}} | Proudly published with <a href="https://ghost.org">Ghost</a></div>



        </section>
    </footer>

    {{! Ghost outputs important scripts and data with this tag }}
    {{ghost_foot}}


    {{! The main JavaScript file for Escritor }}
    <script type="text/javascript" src="{{asset "js/main.js"}}"></script>


</body>
</html>
